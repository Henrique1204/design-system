{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@tests/*": [
        "src/tests/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@mocks/*": [
        "src/mocks/*"
      ]
    }
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "./src/**/*.*",
    "./rollup.config.js",
    "**/*.svg"
  ]
}